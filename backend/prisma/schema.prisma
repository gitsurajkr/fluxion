generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  role      Role     @default(USER)
  password  String

  // Profile fields
  avatarUrl     String?   @db.VarChar(500)
  organization  String?   @db.VarChar(200)
  contactNumber String?   @db.VarChar(50)
  address       String?   @db.VarChar(500)

  // Email verification fields
  isEmailVerified      Boolean   @default(false)
  emailVerificationOTP String?
  otpExpiry            DateTime?

  // Temporary field for pending password change
  pendingPasswordHash  String?

  // Password reset fields
  resetToken       String?
  resetTokenExpiry DateTime?

  carts     Cart[]
  orders    Order[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
}

enum Role {
  USER
  ADMIN
}

model Tempelate {
  id           String            @id @default(cuid())
  title        String            @db.VarChar(200)
  description  String            @db.Text
  price        Float
  imageUrl     String            @db.VarChar(500)
  thumbnailUrl String            @db.VarChar(500)
  isActive     TempelateStatus   @default(ACTIVE)
  details      TempelateDetail?
  carts        Cart[]
  orderItems   OrderItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([isActive])
  @@index([price])
}

enum TempelateStatus {
  ACTIVE
  INACTIVE
}

model TempelateDetail {
  id             String   @id @default(cuid())
  tempelateId    String   @unique
  header         String   @db.VarChar(300)
  headerSubtitle String   @db.VarChar(500)
  features       String[]
  benefits       String[]
  tempelate      Tempelate @relation(fields: [tempelateId], references: [id], onDelete: Cascade)
  carts          Cart[]
  orderItems    OrderItem[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}


model Cart {
  id                String   @id @default(cuid())
  userId            String
  tempelateId       String
  tempelateDetailId String?
  quantity          Int      @default(1)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user            User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  tempelate       Tempelate        @relation(fields: [tempelateId], references: [id], onDelete: Cascade)
  tempelateDetail TempelateDetail? @relation(fields: [tempelateDetailId], references: [id], onDelete: SetNull)

  @@unique([userId, tempelateId, tempelateDetailId])
  @@index([userId])
  @@index([tempelateId])
  @@index([tempelateDetailId])
}

model Order {
  id         String      @id @default(cuid())
  userId     String
  total      Float
  status     OrderStatus @default(PENDING)
  paymentId  String?
  paymentRef String?

  orderItems OrderItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
}

model OrderItem {
  id                String   @id @default(cuid())
  orderId           String
  tempelateId       String
  tempelateDetailId String?
  quantity          Int
  price             Float
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  order             Order            @relation(fields: [orderId], references: [id], onDelete: Cascade)
  tempelate         Tempelate        @relation(fields: [tempelateId], references: [id], onDelete: Cascade)
  tempelateDetail   TempelateDetail? @relation(fields: [tempelateDetailId], references: [id], onDelete: SetNull)

  @@index([orderId])
  @@index([tempelateId])
  @@index([tempelateDetailId])
}

enum OrderStatus {
  PENDING
  COMPLETED
  CANCELLED
}